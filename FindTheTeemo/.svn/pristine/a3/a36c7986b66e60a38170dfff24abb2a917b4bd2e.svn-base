<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".HelpActivity" >

	<ScrollView
	    android:id="@+id/scrollview"
     	android:layout_width="fill_parent"
        android:layout_height="fill_parent">

	    <LinearLayout
	        android:id="@+id/linearLayout1"
	        android:layout_width="match_parent"
	        android:layout_height="745dp"
	        android:layout_alignParentBottom="true"
	        android:layout_centerHorizontal="true"
	        android:orientation="vertical" >
	
		        <TextView
		            android:id="@+id/txtHowTo"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="@string/how_to_play"
		            android:textAppearance="?android:attr/textAppearanceMedium" />

		        <Space
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content" />
		
		        <TextView
		            android:id="@+id/txtHelpBody"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="@string/help_text" />

		        <Space
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content" />

		        <Space
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content" />

		        <Space
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content" />
		 		
		        <TextView
		            android:id="@+id/txtAboutAuthor"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="@string/creator_text"
		            android:textAppearance="?android:attr/textAppearanceMedium" />

		        <TextView
		            android:id="@+id/linkHomepage"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:autoLink="web"
		            android:text="@string/cmpt276_homepage" />

		        <TextView
		            android:id="@+id/txtResourcesUsed"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="@string/list_of_resources_used" />

		        <TextView
		            android:id="@+id/linkAppIcon"
		            android:autoLink="web"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="@string/app_icon" />

		        <TextView
		            android:id="@+id/linkWelcomeScreenTeemo"
		            android:autoLink="web"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="@string/teemo_on_welcome_screen" />

		        <TextView
		            android:id="@+id/linkMainScreenTeemo"
		            android:autoLink="web"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="@string/teemo_on_main_screen" />

		        <TextView
		            android:id="@+id/linkMainScreenSign"
		            android:autoLink="web"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="@string/shroom_warning_sign" />

		        <TextView
		            android:id="@+id/linkBackground"
		            android:autoLink="web"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="@string/background" />

		</LinearLayout>
	</ScrollView>

</RelativeLayout>