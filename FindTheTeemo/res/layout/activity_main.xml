<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:orientation="vertical" >

        <Button
            android:id="@+id/playBtn"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:text="@string/play_game" />

        <Button
            android:id="@+id/optionsBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/options" />

        <Button
            android:id="@+id/helpBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/help" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtAboutAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/game_title"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="60sp" />

    <ImageView
        android:id="@+id/imgMainActivity1"
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        android:layout_alignBottom="@+id/linearLayout1"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/main_activity_logo"
        android:scaleType="center"
        android:src="@drawable/teemo" />

    <ImageView
        android:id="@+id/imgMainActivity2"
        android:layout_width="140dp"
        android:layout_height="170dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/imgMainActivity1"
        android:contentDescription="@string/main_activity_logo2"
        android:scaleType="fitStart"
        android:src="@drawable/warning" />

</RelativeLayout>